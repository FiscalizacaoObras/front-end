FROM node:18-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar dependências (apenas produção se possível)
RUN npm ci --only=production

# Copiar código da aplicação
COPY . .

# Build da aplicação
RUN npm run build

# Expor porta do Vite Preview
EXPOSE 4173

# Comando de inicialização para produção
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "4173"]